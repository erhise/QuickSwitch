{
    "name": "vs-ng-quick-switch",
    "displayName": "Angular QuickSwitch",
    "description": "Jump between component files, switch back and forth to associated template.",
    "version": "1.0.0",
    "publisher": "erhise",
    "license": "MIT",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "assets/vs-ng-quick-switch-logo.png",
    "keywords": [
        "switch between",
        "toggle",
        "file",
        "angular",
        "template"
    ],
    "activationEvents": [
        "onCommand:extension.ngQuickSwitchToggle",
        "onCommand:extension.ngQuickSwitchOpenClass",
        "onCommand:extension.ngQuickSwitchOpenTemplate",
        "onCommand:extension.ngQuickSwitchOpenStyle"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.ngQuickSwitchToggle",
                "title": "Switch/toggle associated component files",
                "category": "Workspace"
            },
            {
                "command": "extension.ngQuickSwitchOpenClass",
                "title": "Open component class file",
                "category": "Workspace"
            },
            {
                "command": "extension.ngQuickSwitchOpenTemplate",
                "title": "Open component template file",
                "category": "Workspace"
            },
            {
                "command": "extension.ngQuickSwitchOpenStyle",
                "title": "Open component style file",
                "category": "Workspace"
            }
        ],
        "keybindings": [
            {
                "command": "extension.ngQuickSwitchToggle",
                "key": "ctrl+alt+t",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.ngQuickSwitchOpenClass",
                "key": "ctrl+numpad1",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.ngQuickSwitchOpenTemplate",
                "key": "ctrl+numpad2",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.ngQuickSwitchOpenStyle",
                "key": "ctrl+numpad3",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
